<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ja.workshop.hibernate.model">

    <class name="Book" table="Books">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="title"/>
        <many-to-one name="authors" class="ja.workshop.hibernate.model.Author">
            <column name="author_id"/>
        </many-to-one>
    </class>

    <class name="Author" table="Authors">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="surname"/>
        <set name="books">
            <key column="books"/>
            <one-to-many class="ja.workshop.hibernate.model.Book"/>
        </set>
    </class>

</hibernate-mapping>